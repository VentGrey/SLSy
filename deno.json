{
    "name": "@ventgrey/slsy",
    "version": "0.1.1",
    "exports": "./src/index.ts",
    "publish": {
        "include": [
            "deno.json",
            "src",
            "types",
            "README.md"
        ]
    },
    "compilerOptions": {
        "allowJs": false,
        "strict": true
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "always"
    },
    "lint": {
        "include": ["src/**/*.ts", "tests/**/*.ts"],
        "rules": {
            "tags": ["recommended"],
            "include": [
                "ban-untagged-todo",
                "eqeqeq",
                "explicit-function-return-type",
                "no-console"
            ]
        }
    },
    "imports": {
        "@oak/oak": "jsr:@oak/oak@^16.0.0",
        "@std/assert": "jsr:@std/assert@^0.225.1",
        "$interfaces": "./src/interfaces.ts",
        "$shields/hide_powered_by": "./src/shields/hide-powered-by/index.ts",
        "$shields/ienoopen": "./src/shields/ienoopen/index.ts",
        "$types": "./types/types.ts"
    }
}
