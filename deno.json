{
    "name": "@ventgrey/slsy",
    "version": "0.2.4",
    "exports": "./src/mod.ts",
    "publish": {
        "include": [
            "deno.json",
            "src",
            "types",
            "README.md"
        ]
    },
    "compilerOptions": {
        "allowJs": false,
        "strict": true
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "always"
    },
    "lint": {
        "include": ["src/**/*.ts", "tests/**/*.ts"],
        "rules": {
            "tags": ["recommended"],
            "include": [
                "ban-untagged-todo",
                "eqeqeq",
                "explicit-function-return-type",
                "no-console",
                "prefer-ascii"
            ]
        }
    },
    "imports": {
        "$shields/crossdomain": "./src/shields/crossdomain/mod.ts",
        "$shields/dnsprefetch": "./src/shields/dns-prefetch-control/mod.ts",
        "$shields/dontsniff": "./src/shields/dont-sniff-mimetype/mod.ts",
        "$shields/expectct": "./src/shields/expect-ct/mod.ts",
        "$shields/expectheader": "./src/shields/expect-header/mod.ts",
        "$shields/featurepolicy": "./src/shields/feature-policy/mod.ts",
        "$shields/frameguard": "./src/shields/frameguard/mod.ts",
        "$shields/hide_powered_by": "./src/shields/hide-powered-by/mod.ts",
        "$shields/hsts": "./src/shields/hsts/mod.ts",
        "$shields/ienoopen": "./src/shields/ienoopen/mod.ts",
        "$shields/referrer": "./src/shields/referrer-policy/mod.ts",
        "$types": "./types/mod.ts",
        "@oak/oak": "jsr:@oak/oak@^16.0.0",
        "@std/assert": "jsr:@std/assert@^0.225.1"
    },
    "test": {
        "include": [
            "tests/**/*.ts"
        ]
    }
}
